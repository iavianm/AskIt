<%= form_with model: @question do |f| %>
  <div>
    <%= f.label :Title %>
    <%= f.text_field :title, required: true, minlength: 2, placeholder: 'Title' %>
  </div> 

  <div>
    <%= f.label :Body %>
    <%= f.text_area :body, required: true, minlength: 2 %>
  </div>
  
  <%= f.submit "Submit question!" %>
<% end %>